<Page
    x:Class="MD5.Vhod"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MD5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Width="500" MinWidth="500" MaxWidth="500" MinHeight="500" Height="500" MaxHeight="500">

    <Grid Width="500" MinWidth="500" MaxWidth="500" MinHeight="500" Height="500" MaxHeight="500">
        <TextBox x:Name="textBox" MaxLength="15" HorizontalAlignment="Center" Margin="0,142,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" Height="60" PlaceholderText="Введите логин" FontSize="36" Padding="10,0,6,6"/>
        <PasswordBox x:Name="passwordBox" MaxLength="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="480" Height="60" PlaceholderText="Введите пароль" FontSize="36" Padding="10,0,6,6"/>
        <Button x:Name="button" Content="Войти" Margin="0,302,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="266" Height="67" FontSize="48" Padding="8,-3,8,8" Click="finalOCHKA"/>
        <Button x:Name="button1" Content="Вернуться к окну регистрации" Margin="0,415,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="480" Height="43" FontSize="18" Click="button1_Click"/>

    </Grid>
</Page>
